@{
	Layout = "~/Views/Shared/_LayoutManagement.cshtml";
}
<style>
	.table1 {
		border: 2px solid #eee;
	}

		.table1 td {
			padding: 10px;
		}
</style>

<table class="table" border="1">
	<tr style="font-weight:700">
		<td>Planned Start</td>
		<td>Planned End</td>
		<td>Actual Start</td>
		<td>Actual End</td>
		<td>Project Name</td>
	</tr>
	@model List<ERPS.ServiceLayer.Models.TaskModel>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.PlannedStart.Value.ToShortDateString()</td>
			<td>@item.PlannedEnd.Value.ToShortDateString()</td>
			<td>@item.ActualStart.Value.ToShortDateString()</td>
			<td>@item.ActualEnd.Value.ToShortDateString()</td>
			<td>@item.ProjectName</td>
			<td>@Html.ActionLink("Details", "GetTaskById", new { id = item.Id }) </td>
			<td>@Html.ActionLink("Delete", "DeleteTask", new { id = item.Id }, new { onclick = "return confirm('Are you sure you want to delete this task?');" } ) </td>
		</tr>
	}
</table>
<td>@Html.ActionLink("Add New Task", "AddTask", "Task") </td>

